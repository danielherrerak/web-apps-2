<h1>New Post</h1>

<h1> <%= @post["author"]%> </h1>
<h2> <%= @post["body"]%> </h2>
<h3> <%= @post["image"]%> </h3>

<p>
    <a href="/posts"> Back to all posts </a>
<p>

<%= form_with :model => @post do |form| %>
  <p>
    <%= form.label "author", "Author Name" %>
    <%= form.text_field "author" %>
  </p>
  <p>
    <%= form.label "body" %>
    <%= form.text_field "body" %>
    <%= form.label "image" %>
    <%= form.text_field "image" %>
  </p>
  <%= form.submit %>
<% end %>